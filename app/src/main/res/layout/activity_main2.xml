<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Alnajim.osama.StarLanguage.QuestionGame.WhichLanguage"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/splashbg">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose The Language"
            android:textAlignment="center"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:padding="10dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/GoToEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="English"
            android:textColor="@color/white"
            android:background="@drawable/roundbutton2"
            android:onClick="GoToEnglish"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/GoToTurkish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Turkish"
            android:textColor="@color/white"
            android:background="@drawable/roundbutton1"
            android:onClick="GoToTurkish"
            android:layout_marginBottom="20dp"/>



        <Button
            android:id="@+id/addQuestionbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Add Questions"
            android:textColor="@color/white"
            android:background="@drawable/roundbutton2"
            android:onClick="addQuestionbutton"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>


</LinearLayout>
